<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alicloud.mapper.UserMapper">

    <select id="getUserList" resultType="com.alicloud.bean.User">
        SELECT user_name, password,email from sys_user
    </select>
<!--    登录校验用户名密码-->
    <select id="getUserToLogin" resultType="com.alicloud.bean.User" parameterType="com.alicloud.bean.User">
        SELECT id, password  FROM sys_user WHERE 1 =1
        <if test="loginType == 0">
            and password = #{passWord}
        </if>
        <if test="loginType == 1">
            and phonenumber = #{mobile}
        </if>
    </select>

    <select id="getUserPermission" resultType="com.alicloud.bean.Menu">
        SELECT
            sur.user_id ,
            sm.id,
            sm.perms,
            sr.role_key
        from
            sys_user_role sur
                INNER JOIN sys_role sr
                           on
                               sur.role_id = sr.id
                INNER join sys_role_menu srm
                           on
                               sr.id = srm.role_id
                inner JOIN sys_menu sm
                           on
                               srm.menu_id = sm.id
        where
            sr.status = 0
          and sm.status = 0
          and sur.user_id = #{userId};
    </select>

</mapper>